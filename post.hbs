{{!< default}}
{{#post}}

<main class="container" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title text-center display-2">{{title}}</h1>
            <section class="post-meta text-center text-muted">
                by {{author}} on <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
            </section>
        </header>

        <section class="post-content col-sm-12 col-md-10 offset-md-1 mt-4">
            {{content}}
        </section>

    </article>
</main>

{{/post}}
